<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.EditScheduleActivity">

    <TextView
        android:id="@+id/txt_title_edit_schedule"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:text="Tracajá Lab"
        android:textSize="36sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_subtitle_edit_schedule"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:text="Análises Clínicas"
        android:textSize="22sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:padding="12dp"
        android:orientation="horizontal">

            <fragment
                android:id="@+id/frag_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.example.tyrone.tracajalab.Fragments.EditFragment"
                tools:layout="@android:layout/simple_list_item_1"
                />

    </LinearLayout>

</LinearLayout>